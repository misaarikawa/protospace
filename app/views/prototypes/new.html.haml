.navbar.navbar-default.navbar-static-top.navbar-fixed-top
  .container
    %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", type: "button"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{href: "/"}
      %img{alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "36px", src: "/assets/logo-b99f177af8fb82de2d6d7b86e95c7f329d3d143edd8b225bc2875ad9dd6e0cc3.png"}/
  - if user_signed_in?
    .navbar-collapse.collapse.navbar-responsive-collapse
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", href: "/", role: "button"}
            name
            %span.caret
              %ul.dropdown-menu{role: "menu"}
                %li
                  %a{href: "/users/id"} My Page
                %li
                  %a{href: "/users/id/edit"} Profile Edit
                %li
                  %a{"data-method": "delete", href: "/users/sign_out", rel: "nofollow"} Logout
        %li
          .btn.btn-primary.navbar-btn
            %a{href: "/prototypes/new"} New Proto
  - else
    .navbar-collapse.collapse.navbar-responsive-collapse
      %ul.nav.navbar-nav.navbar-right
        %li
          .btn.btn-primary.navbar-btn
            %a{href: "/users/sign_in"} Get Started

%form.container.proto-new{action: ""}
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %input.proto-new-title{type: "text", placeholder: "Title"}/
    .row
      .col-md-12
        .cover-image-upload
          %input{type: "file"}/
      .col-md-12
        %ul.proto-sub-list.list-group
          %li.list-group-item.col-md-4
            .image-upload
              %input{type: "file"}/
          %li.list-group-item.col-md-4
            .image-upload
              %input{type: "file"}/
          %li.list-group-item.col-md-4
            .image-upload-plus
              %span +
    .row.proto-description
      .col-md-12
        %input{type: "text", placeholder: "Catch Copy"}/
      .col-md-12
        %textarea{name: "", cols: "30", rows: "4", placeholder: "Concept"}
      .col-md-12
        %h4 Tag List
        .row
          .col-md-3
            %input{type: "text", placeholder: "Web Design"}/
          .col-md-3
            %input{type: "text", placeholder: "UI"}/
          .col-md-3
            %input{type: "text", placeholder: "Application"}/
    .row.text-center.proto-btn
      %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Publish
